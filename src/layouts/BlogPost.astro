---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'] & { showDate?: boolean };

const { title, description, pubDate, updatedDate, heroImage, showDate = true } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 80vw;
				max-width: min(1920px, calc(100% - 2em));
				margin: 0 auto;
				order: 2;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				max-height: 360px;
				width: 80vw;
				max-width: 1920px;
				object-fit: cover;
			}
			.prose {
				width: 80vw;
				max-width: min(1920px, calc(100% - 2em));
				margin: auto;
				padding: 0em 1em 1em 1em ;
				color: rgb(var(--gray-dark));
				order: 1;
			}
			.title {
				margin-bottom: 1em;
				padding: 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			.content-flow {
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}
		</style>
	</head>

	<body>
		<Header />
		<main data-pagefind-body>
			<article class="content-flow">
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						{showDate && (
							<div class="date">
								<FormattedDate date={pubDate} />
								{
									updatedDate && (
										<div class="last-updated-on">
											Last updated on <FormattedDate date={updatedDate} />
										</div>
									)
								}
							</div>
						)}
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
