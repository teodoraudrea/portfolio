---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Writing</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<details class="mobile-nav">
			<summary aria-label="Open navigation">
				<span class="hamburger" aria-hidden="true">
					<span></span>
					<span></span>
					<span></span>
				</span>
			</summary>
			<div class="mobile-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Writing</HeaderLink>
				<HeaderLink href="/projects">Projects</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</div>
		</details>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	.internal-links {
		display: flex;
		gap: 0.25rem;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.mobile-nav {
		display: none;
	}
	@media (min-width: 721px) {
		.internal-links {
			display: flex;
		}
		.mobile-nav {
			display: none;
		}
	}
	@media (max-width: 720px) {
		header {
			position: sticky;
			top: 0;
			z-index: 10;
		}
		nav {
			position: relative;
			flex-direction: row;
			align-items: center;
			justify-content: space-between;
			gap: 1rem;
		}
		h2 {
			font-size: 1.1rem;
		}
		.internal-links {
			display: none;
		}
		.mobile-nav {
			display: block;
			position: relative;
		}
		.mobile-nav summary {
			list-style: none;
			cursor: pointer;
			padding: 0.5rem 0.6rem;
			border-radius: 999px;
			background: rgba(var(--gray-light), 0.7);
			font-weight: 600;
			font-size: 0.9rem;
			display: flex;
			align-items: center;
		}
		.mobile-nav summary::-webkit-details-marker {
			display: none;
		}
		.hamburger {
			display: inline-flex;
			flex-direction: column;
			gap: 4px;
		}
		.hamburger span {
			display: block;
			width: 20px;
			height: 2px;
			background: rgb(var(--gray-dark));
			border-radius: 2px;
		}
		.mobile-links {
			display: flex;
			flex-direction: column;
			gap: 0.25rem;
			margin-top: 0.5rem;
			padding: 0.5rem;
			border-radius: 12px;
			background: white;
			box-shadow: var(--box-shadow);
			position: absolute;
			right: 0;
			top: calc(100% + 0.25rem);
			min-width: 200px;
		}
		.mobile-links a {
			padding: 0.5rem 0.75rem;
			border-radius: 10px;
			border-bottom: none;
		}
		.mobile-links a.active {
			background: rgba(29, 78, 216, 0.12);
			color: var(--accent-dark);
		}
	}
</style>
