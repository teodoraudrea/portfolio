---
import { SITE_AUTHOR, SITE_INSTAGRAM, SITE_LINKEDIN, SITE_TITLE } from '../consts';

const today = new Date();
---

<footer>
	<div class="footer-inner">
		<p>&copy; {today.getFullYear()} {SITE_AUTHOR}. All rights reserved.</p>
		<div class="footer-links">
			<a href={SITE_LINKEDIN} target="_blank" rel="noreferrer">LinkedIn</a>
			<a href={SITE_INSTAGRAM} target="_blank" rel="noreferrer">Instagram</a>
		</div>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 4em 1em;
		background: #f8fafc;
		color: rgb(var(--gray));
		text-align: center;
	}
	.footer-inner {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		align-items: center;
	}
	.footer-links {
		display: flex;
		gap: 1.5rem;
		font-weight: 600;
	}
	.footer-links a {
		text-decoration: none;
		color: rgb(var(--gray-dark));
	}
	.footer-links a:hover {
		color: var(--accent);
	}
</style>
